  const upcomingAppointments = [
    {
      id: 1,
      time: '09:00 AM',
      patient: 'Sarah Johnson',
      type: 'Routine Eye Exam',
      status: 'checked-in',
      phone: '(555) 123-4567',
    },
    {
      id: 2,
      time: '09:30 AM',
      patient: 'Michael Chen',
      type: 'Contact Lens Fitting',
      status: 'waiting',
      phone: '(555) 234-5678',
    },
    {
      id: 3,
      time: '10:00 AM',
      patient: 'Emily Rodriguez',
      type: 'Glaucoma Follow-up',
      status: 'scheduled',
      phone: '(555) 345-6789',
    },
    {
      id: 4,
      time: '10:30 AM',
      patient: 'David Wilson',
      type: 'Diabetic Eye Screening',
      status: 'scheduled',
      phone: '(555) 456-7890',
    },
